<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/id_iv_forum_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_login_back_normal"
            android:src="@mipmap/login_defaule_title"/>

        <TextView
            android:id="@+id/id_tv_forum_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/id_iv_forum_title"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/id_iv_forum_title"
            android:maxLines="1"
            android:text="赵子龙"
            android:textColor="#393939"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/id_tv_forum_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/id_iv_forum_title"
            android:gravity="right"
            android:maxLines="10"
            android:paddingRight="24dp"
            android:text="2016-11-12"
            android:textColor="#5c5c5c"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/id_tv_forum_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_tv_forum_user_name"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/id_iv_forum_title"
            android:maxLines="10"
            android:text="中新网12月29日电 据外媒报道，目前仍沉浸圣诞节气氛中的菲律宾各地，近来相继有人趁机制造恐慌，当地时间本月28日晚，该国就发生两起爆炸案，造成至少30人受伤"
            android:textColor="#5c5c5c"
            android:textSize="12sp"/>
    </RelativeLayout>

</LinearLayout>