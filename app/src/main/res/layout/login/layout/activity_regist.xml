<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_base_color"
              android:orientation="vertical">

    <!--header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/common_base_item_background">

        <LinearLayout
            android:id="@+id/id_ll_register_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_iv_register_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_login_back_normal"
                android:contentDescription="1"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:src="@mipmap/back"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="16dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/id_iv_register_title"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_back_normal"
        android:padding="8dp"
        android:src="@mipmap/login_defaule_title"/>

    <!--用户名-->
    <LinearLayout

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:background="@drawable/bg_person_item_select_2"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/person_tiem_title_background"
            android:padding="6dp"
            android:src="@mipmap/person_sign"/>

        <EditText
            android:id="@+id/id_et_register_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:textColor="@color/person_item_text_color"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="*"
            android:textColor="#e21d1d"/>
    </LinearLayout>

    <!--密码-->
    <LinearLayout

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_person_item_select_2"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/person_tiem_title_background"
            android:padding="6dp"
            android:src="@mipmap/person_sign"/>

        <EditText
            android:id="@+id/id_et_register_user_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入用户密码"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:textColor="@color/person_item_text_color"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="*"
            android:textColor="#e21d1d"/>
    </LinearLayout>
    <!--密码-->
    <LinearLayout

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_person_item_select_2"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/person_tiem_title_background"
            android:padding="6dp"
            android:src="@mipmap/person_sign"/>

        <EditText
            android:id="@+id/id_et_register_user_password_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再输入用户密码"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:textColor="@color/person_item_text_color"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="*"
            android:textColor="#e21d1d"/>
    </LinearLayout>
    <!--密码-->
    <LinearLayout

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_person_item_select_2"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/person_tiem_title_background"
            android:padding="6dp"
            android:src="@mipmap/person_sign"/>

        <Spinner
            android:id="@+id/id_et_register_user_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请再输入用户密码"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:textColor="@color/person_item_text_color"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="12sp"
            android:entries="@array/user_sex"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="*"
            android:textColor="#e21d1d"/>
    </LinearLayout>
    <!--注册-->
    <LinearLayout
        android:id="@+id/id_ll_regist"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_person_item_select_2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id_tv_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_person_button_login_select"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </LinearLayout>


</LinearLayout>