<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_base_color"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/common_base_item_background">

        <LinearLayout
            android:id="@+id/id_ll_smss_login_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_iv_smss_login_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_login_back_normal"
                android:contentDescription="1"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:src="@mipmap/back"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="短信登录"
                android:textColor="#fff"
                android:textSize="16dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_back_normal"
        android:padding="8dp"
        android:src="@mipmap/login_defaule_title"/>

    <!--手机号-->
    <LinearLayout

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_person_item_select_2"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/person_tiem_title_background"
            android:padding="6dp"
            android:src="@mipmap/person_sign"/>

        <EditText
            android:id="@+id/id_et_smss_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:textColor="@color/person_item_text_color"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="12sp"/>
    </LinearLayout>
    <!--验证-->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_person_item_select_2"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/person_tiem_title_background"
            android:padding="6dp"
            android:src="@mipmap/person_sign"/>

        <EditText
            android:id="@+id/id_et_smss_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请点击"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:textColor="@color/person_item_text_color"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/id_et_smss_get_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="@color/common_base_item_background"
            android:textSize="12sp"/>
    </LinearLayout>

    <!--w登录-->
    <LinearLayout
        android:id="@+id/id_ll_next"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_person_item_select_2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id_tv_smss_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_person_button_login_select"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </LinearLayout>

    <!--底部-->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="6dp"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:text="新用户注册"
            android:textColor="@color/common_base_item_background"
            android:textColorHint="@color/person_item_text_hint_color"
            android:textSize="10sp"/>
    </LinearLayout>

</LinearLayout>