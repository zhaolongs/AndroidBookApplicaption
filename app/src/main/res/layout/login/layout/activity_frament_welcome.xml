<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_tv_welcome_sing_1"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:text="@string/welcome_sign_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/id_tv_welcome_sing_2"
            android:layout_marginTop="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:text="@string/welcome_sign_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/id_tv_welcome_sing_3"
            android:layout_marginTop="18dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:text="@string/welcome_sign_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>