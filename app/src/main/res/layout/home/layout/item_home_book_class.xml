<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/bg_home_book_list_item_select"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/id_iv_book_class_item_title"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/defaul_title"/>

        <TextView
            android:id="@+id/id_book_class_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="html"
            android:textColor="#161616"
            android:textSize="16sp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/id_book_class_item_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="这是一本很神厅的长篇历史小说"
            android:textColor="#818080"
            android:textSize="10sp"/>

    </LinearLayout>

</LinearLayout>